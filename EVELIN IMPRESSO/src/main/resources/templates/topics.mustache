<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>EVELIN</title>
    <!-- Bootstrap Core CSS -->
    <link href=" css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href=" css/main.css" rel="stylesheet">
    <!-- Datatables -->
    <link href=" css/datatables.net-bs/css/dataTables.bootstrap.min.css" rel="stylesheet">
    <!-- Tag Input-->
    <link href=" css/bootstrap-tagsinput.css" rel="stylesheet">
    <!-- Dialog-->
    <link href=" css/bootstrap-dialog.css" rel="stylesheet">
    <!-- Font Awsome-->
    <link href="https://use.fontawesome.com/releases/v5.0.8/css/all.css" rel="stylesheet">


    <link href=" css/bootstrap-datepicker3.min.css" rel="stylesheet">


</head>

<body>
<!--Navbar-->
{{>topic_nav}}

<!--Cache itemes-->
{{#cache}}
    <span class="cache-items">
                        <input type="hidden" class="name-label" value="{{label}}"/>
                        <input type="hidden" class="name-type" value="{{type}}"/>
                        <input type="hidden" class="name-id" value="{{node_id}}"/>
                    </span>
{{/cache}}
<!-- Graph section  -->
<section id="graph" class="content " style="padding: 0px;">
    <div class="row">
        <div class="col-lg-10 col-lg-offset-1 text-center">
            <!-- Messages  -->
            <div id="message" class="alert alert-danger hidden" role="alert">{{message}}</div>

        </div>
    </div>

    <!-- hidden field to save the query from the page before -->
    <input type="hidden" id="query" value="{{query}}"></input>

    <!-- Graph Svg-->
    <div id="intro" class="text-center" >
        <!-- Loading image  -->
        <img id="loading-image" style="margin: auto;" src="js/img/balls.gif" class="hidden"></img>
    </div>
    <div class="row">
        <div id ="graph-container" class="col-lg-10">
            <!--<ul class='custom-menu'>-->
                <!--<li data-action = "add Node">add Node</li>-->
                <!--<li id="removeNode" data-action = "remove Node">remove Node</li>-->
            <!--</ul>-->
            <div class="add_node btn active btn-info" style="display: none">Click somewhere to add the node </div>
            <div class="custom-menu" style="display: none">
            <ul class="list-group  dropdown-menu" style="top: 0%;padding: 0px;min-width: 0px;">
                <!--PERSON-->
                <li class="li-person dropdown-submenu" data-action ="add_per">
                <span class="btn-group dropdown-btn">
                           <button id="graph_per" type="button" data-value="PERS" class="btn btn-person " style="border-radius: 0px;padding: 2px;"  data-placement="bottom" > <span class="glyphicon glyphicon-plus"></span> ACT <img width="24px" src="js/img/person-white.png"></img></button>

                    </span>
                    <!--sub menu-->
                    <ul class="dropdown-menu sub" style="left: 100%" >
                    </ul>
                   </li>
                <!--ORG-->
                <li class="li-org dropdown-submenu" data-action ="add_org"><span class="btn-group dropdown-btn">
                          <button id="graph_org" type="button" data-value="ORG" class="btn btn-org "  style="border-radius: 0px;padding: 2px;"  data-placement="bottom"  > <span class="glyphicon glyphicon-plus"></span> ORG <img width="22px" src="js/img/org-white.png"></img></button>

                    </span>
                    <!--sub menu-->
                    <ul class="dropdown-menu sub" style="left: 100%;top: 25%;" >
                    </ul>

                </li>
                <!--LOC-->
                <li class="li-loc dropdown-submenu" data-action ="add_loc"> <span class="btn-group dropdown-btn">
                          <button id="graph_loc" type="button" data-value="LOC" class="btn btn-loc "  style="border-radius: 0px;padding: 2px;" data-placement="bottom"  > <span class="glyphicon glyphicon-plus"></span> LOC <img width="24px" src="js/img/loc-white.png"></img></button>

                    </span>
                    <!--sub menu-->
                    <ul class="dropdown-menu sub" style="left: 100%;top: 50%;" >
                    </ul></li>
                <!--REMOVE-->
                <li class="li-rmv" data-action ="rmv"> <span class="btn-group dropdown-btn">
                          <button id="graph_rmv" type="button" data-value="RMV" class="btn btn-rmv "  style="border-radius: 0px;padding: 2px;" data-placement="bottom"  >  <span class="glyphicon glyphicon-minus"></span> DEL  <img width="22px" src="js/img/remove.png"></img></button>

                    </span></li>
            </ul>
            <input type="hidden" id="current_node">
                <input type="hidden" id="current_add_node">
            </div>

            <div id="mynetwork">
                <div class="vis-network" tabindex="900" style="position: relative; overflow: hidden; touch-action: pan-y; user-select: none; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); width: 100%; height: 100%;">
                    <canvas width="1200" height="800" style="position: relative; touch-action: none; user-select: none; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); width: 100%; height: 100%;"></canvas></div></div>

        </div>

</section>

<!--footer-->
{{>footer}}

<!-- jQuery -->
<script src=" js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src=" js/bootstrap.min.js"></script>

<!-- JS file -->
<!-- graph  -->
<script src=" js/d3.min.js"></script>
<script src=" js/graph_topics.js"></script>

<script type="text/javascript" src="dist/vis.js"></script>
<link href="dist/vis-network.min.css" rel="stylesheet" type="text/css">
<!-- date  picker -->

<script type="text/javascript" src="js/bootstrap-datepicker.min.js"></script>

<!-- typeahed and tags input  -->
<script src=" js/bootstrap-tagsinput.js"></script>
<script src=" js/bootstrap-typeahead.js"></script>
<!-- fingerprint of the browser  -->
<script src=" js/fingerprint.js"></script>
<!-- modal -->
<script src=" js/bootstrap-dialog.js"></script>
<!-- custom script for the navbar  -->
<script src=" js/prog.js"></script>
<!-- javascript for the page  -->
<script src=" js/topic_page.js"></script>

</body>

</html>
